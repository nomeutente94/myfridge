<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="5dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/expiryDateDaySpinner"
                android:tag="expiryDateDaySpinner"
                android:dropDownWidth="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>
            <Spinner
                android:id="@+id/expiryDateMonthSpinner"
                android:tag="expiryDateMonthSpinner"
                android:dropDownWidth="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>
            <Spinner
                android:id="@+id/expiryDateYearSpinner"
                android:tag="expiryDateYearSpinner"
                android:dropDownWidth="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>

        </LinearLayout>

        <TextView
            android:id="@+id/illegalExpiryDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:text="La data di scadenza immessa non Ã¨ valida."/>
    </LinearLayout>

</RelativeLayout>